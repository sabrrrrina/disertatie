{
  "manifest_version": 3,
  "name": "My first cookie handler",
  "version": "1.0",
  "description": "Rejects optional cookies from websites.",
  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "cookies",
    "browsingData"
  ],
  "host_permissions": [
        "*://*/*"
  ],
  "background": {
    "service_worker": "detect.js",
    "type": "module"
  },
  "action": {               
    "default_icon": {
      "16": "icons/cookie16.png",  
      "32": "icons/icon32.png"
    },
    "default_title": "My Cookie Handler",
    "default_popup": "./ui/popup.html"
  },
  "icons": {
    "16": "icons/cookie16.png",
    "32": "icons/icon32.png",
    "48": "icons/cookie48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [  
    {
      "resources": [
        "detect.js",
        "content.js",         
        "handlers/*.js",      
        "assistant/*.js",
        "block/*.js",
        "icons/*.png"        
      ],
      "matches": ["<all_urls>"] 
    }
  ]
}
